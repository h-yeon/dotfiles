let mapleader = ' '

set hlsearch incsearch
set number
set relativenumber

" Easy escape
inoremap jk <esc>
inoremap <esc> <nop>

nnoremap / /\v

" Insert a new line
nnoremap <leader>o o<esc>
nnoremap <leader>O O<esc>

" Save file
nnoremap <leader>s :write<cr>

" Quit file
nnoremap <leader>q :q<cr>
nnoremap <leader>Q :qa!<cr>
