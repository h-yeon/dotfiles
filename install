#!/usr/bin/env bash

BASE=$(pwd)
PLATFORM=$(uname -s)

# dotfiles
ln -sfv "$BASE/bashrc" ~/.bashrc
ln -sfv "$BASE/bash_profile" ~/.bash_profile
ln -sfv "$BASE/inputrc" ~/.inputrc
ln -sfv "$BASE/vimrc" ~/.vimrc
ln -sfv "$BASE/ideavimrc" ~/.ideavimrc
ln -sfv "$BASE/tmux.conf" ~/.tmux.conf
ln -sfv "$BASE/gitconfig" ~/.gitconfig
ln -sfv "$BASE/gitignore" ~/.gitignore

# Configs
mkdir -p ~/.config/pgcli
mkdir -p ~/.config/mycli
ln -sfv "$BASE/config/pgcli/config" ~/.config/pgcli/config
ln -sfv "$BASE/config/mycli/config" ~/.myclirc

ln -sfv "$BASE/bin/" ~/bin

# Vim
rm -rf ~/.vim/colors
rm -rf ~/.vim/plugin
ln -sfv "$BASE/colors" ~/.vim/colors
ln -sfv "$BASE/plugin" ~/.vim/plugin

# Install vim-plug
curl -fLo ~/.vim/autoload/plug.vim --create-dirs \
        https://raw.githubusercontent.com/junegunn/vim-plug/master/plug.vim

# Git hooks
rm -rf ~/.git_template
ln -sfv "$BASE/git_template" ~/.git_template
git config --global init.templatedir '~/.git_template'
git config --global alias.ctags '!.git/hooks/ctags'

# git-prompt
if [ ! -e ~/.git-prompt.sh ]; then
	curl https://raw.githubusercontent.com/git/git/master/contrib/completion/git-prompt.sh -o ~/.git-prompt.sh
fi

# git-completion
if [ ! -e ~/.git-completion.bash ]; then
	curl https://raw.githubusercontent.com/git/git/master/contrib/completion/git-completion.bash -o ~/.git-completion.bash
fi

# CTAGS
if [ "$PLATFORM" = Linux ]; then
    sudo apt-get install -y gcc ctags

    git clone --depth 1 https://github.com/junegunn/fzf.git ~/.fzf
    ~/.fzf/install
fi

# Homebrew
if [ "$PLATFORM" = Darwin ]; then
    [ -z "$(which brew)" ] &&
        /usr/bin/ruby -e "$(curl -fsSL https://raw.githubusercontent.com/Homebrew/install/master/install)"

    brew install \
       bash-completion@2 \
       vim tmux go python \
       git wget mosh jq tree pgcli \
       redis pgcli mycli \
       httpie kubernetes-cli kubernetes-helm kubectx

    brew install fzf
    $(brew --prefix)/opt/fzf/install

    brew cask install karabiner-elements caffeine hammerspoon
    brew install --HEAD universal-ctags/universal-ctags/universal-ctags
fi

# Golang
mkdir -p ~/gosrc

# Miscellaneous

# hammerspoon
rm -rf ~/.hammerspoon
ln -sfv "$BASE/hammerspoon" ~/.hammerspoon

# t
git clone --depth 1 https://github.com/sjl/t.git ~/.t
